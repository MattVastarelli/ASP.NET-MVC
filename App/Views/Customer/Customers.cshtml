@model App.ViewModels.CustomersViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

@if (Model.Customers.Count == 0)
{
    <p>There are no customers on record.</p>
}
@if (Model.Customers.Count > 0)
{
    <table>
        <tr>
            <th>Customers</th>
        </tr>
        @foreach (var cust in Model.Customers)
        {
            <tr>
                <td><a href="Customer/Details/@cust.Id">@cust.Name</a></td>
            </tr>
        }
    </table>
}
